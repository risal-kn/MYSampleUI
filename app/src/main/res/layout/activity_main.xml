<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.risalkn.mysampleui.MainActivity">


    <LinearLayout
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_height="300dp">
        <com.example.risalkn.mysampleui.Views.MeterWidget
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:radius="200"
            app:in_circle_fill_color="@color/color_dark_vilot"
            app:out_circle_fill_color="@color/color_light_vilot"
            app:thikness="60"
            app:setDigreeTextSize="120"
            app:setDigreeText="23"
            app:setDigreeTextX="2.6"
            app:setDigreeTextY="1.8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />
    </LinearLayout>

</RelativeLayout>
